<%- model_class =Assignment::AssignmentComment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_assignment_id) %>:</strong></dt>
  <dd><%= @assignment_comment.user_assignment_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @assignment_comment.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:slug_md) %>:</strong></dt>
  <dd><%= @assignment_comment.slug_md %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              assignment_assignment_comments_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_assignment_assignment_comment_path(@assignment_comment), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              assignment_assignment_comment_path(@assignment_comment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
