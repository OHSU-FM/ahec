<%- model_class =Assignment::AssignmentGroup -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @assignment_group.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @assignment_group.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @assignment_group.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:desc_md) %>:</strong></dt>
  <dd><%= @assignment_group.desc_md %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lime_surveys) %>:</strong></dt>
  <dd><%= @assignment_group.lime_surveys %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_ids) %>:</strong></dt>
  <dd><%= @assignment_group.user_ids %></dd>
</dl>

<%= link_to t('.new', :default => 'Add Survey'),
        new_assignment_survey_assignment_path(assignment_group_id: @assignment_group.id), 
        :class => 'btn btn-primary', data: {toggle: :modal} %>

<%= link_to t('.back', :default => t("helpers.links.back")),
              assignment_assignment_groups_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_assignment_assignment_group_path(@assignment_group), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              assignment_assignment_group_path(@assignment_group),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
