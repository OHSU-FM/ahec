<%= simple_form_for @assignment_group, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :user_id %>
  <%= error_span(@assignment_group[:user_id]) %>
  <%= f.input :title %>
  <%= error_span(@assignment_group[:title]) %>
  <%= f.input :status %>
  <%= error_span(@assignment_group[:status]) %>
  <%= f.input :desc_md %>
  <%= error_span(@assignment_group[:desc_md]) %>
  <%= f.input :survey_assignment_id %>
  <%= error_span(@assignment_group[:survey_assignment_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                assignment_assignment_groups_path, :class => 'btn btn-default' %>
<% end %>
