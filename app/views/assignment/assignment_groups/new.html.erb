<%- model_class =Assignment::AssignmentGroup -%>
<div class="page-header">
    <h1>
        <div class="bs-callout bs-callout-primary">New</div> Project
    </h1>
</div>
<%= simple_form_for [@assignment_group],
    :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.error_notification %>
    <%= f.input :assignment_group_template_id, label: 'Template',
        collection: @assignment_group.assignment_group_template_enum %>
    <% if can? :edit, @assignment_group %>
        <%= render partial: 'assignment/assignment_groups/form_users' %>
    <% end %>
<% end %>

