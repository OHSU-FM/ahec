<%= form_for @assignment_group, remote: true, namespace: :desc_md do |f| %>
  <% fid = '#' + f.options[:html][:id] %>

  <div class="md-show">
    <% if can?(:edit, @assignment_group) %>
    <button type="button" class="btn btn-link pull-right" 
        data-hide="<%= fid %> .md-show" 
        data-show="<%= fid %> .md-edit">
      <i class="glyphicon glyphicon-edit"></i>
    </button>
    <% end %>

    <div class="md-content">
    </div>
  </div>

  <div class="md-edit bs-callout bs-callout-primary" style='display:none;'>
      <h3>
        <span class="label label-primary">Editing</span>
        Description
        <div class="pull-right">
          <%= content_tag :button, type: :submit,
              data: {
                hide: "#{fid} .md-edit",
                show: "#{fid} .md-show",
                copy_val: "#{fid} MyID",
                target: "#{fid} .md-show"
              },
              class: 'btn btn-link' do %>
              <i class='glyphicon glyphicon-ok'></i> 
          <% end %> <!-- Submit -->

          <button type="button" 
                  class="btn btn-link" 
                  data-show="<%= fid %> .md-show" 
                  data-hide="<%= fid %> .md-edit">
              <i class="fa fa-ban"></i>
          </button> <!-- Cancel -->
        </div>
      </h3>

      <%= f.text_area :desc_md, rows: 8 %>
      <!-- Text Content -->
  </div>
<% end %>

