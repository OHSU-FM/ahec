<%- model_class =Assignment::AssignmentGroup -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:desc_md) %></th>
      <th><%= model_class.human_attribute_name(:lime_surveys) %></th>
      <th><%= model_class.human_attribute_name(:user_ids) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @assignment_groups.each do |assignment_group| %>
      <tr>
        <td><%= link_to assignment_group.id, assignment_assignment_group_path(assignment_group) %></td>
        <td><%= assignment_group.user_id %></td>
        <td><%= assignment_group.title %></td>
        <td><%= assignment_group.status %></td>
        <td><%= assignment_group.desc_md %></td>
        <td><%= assignment_group.lime_surveys %></td>
        <td><%= assignment_group.user_ids %></td>
        <td><%=l assignment_group.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_assignment_assignment_group_path(assignment_group), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      assignment_assignment_group_path(assignment_group),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_assignment_assignment_group_path,
            :class => 'btn btn-primary' %>
