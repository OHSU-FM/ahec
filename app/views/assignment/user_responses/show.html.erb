<div class="row">
  <div class="col-md-6 main fade-in two">
    <h1><%= Settings.assignments_route_name.titleize.pluralize %></h1>
  </div>
  <div class="col-md-6 main fade-in two" style="height:69px; display:table;vertical-align:middle;">
    <div style="display:table-cell; vertical-align:middle;">
      <button id="assignment-nav-toggle" type="button" class="btn btn-default" aria-label="Menu" style="float:right; vertical-align:bottom; margin: 0 auto;">
        Menu <span class="glyphicon glyphicon-menu-hamburger"></span>
      </button>
    </div>
  </div>
</div>

<%= render partial: "assignment/shared/assignment_nav", locals: {display: "none" } %>

<%= render "response_nav" %>

<div id="user-response-<%= @user_response.id %>" class="container-fluid">
  <div class="col-md-6 main fade-in two" style="border-right:1px solid #eeeeee;">
    <h2 style="text-align:center;"><%= @user_response.title %></h2>
    <hr />

    <h3>Action Plan</h3>
    <p><%= @user_response.content %></p>
  </div>
  <div class="col-md-6 main fade-in two">
    <div id="user-response-comments">
      <%= render 'comments' %>
    </div>
  </div>
</div>
