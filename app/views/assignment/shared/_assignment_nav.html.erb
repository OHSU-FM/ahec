<div id="assignment-nav" style=<%= display ? "display:#{display}" : "" %>>
  <div class="row main fade-in two">
    <div id="assignment-group-nav" class="col-md-6 left-panel">
      <% if @assignment_groups.count > 1 %>
        <% @assignment_groups.each do |group| %>
          <%= link_to group.title, group, class: "btn btn-#{group.id == @assignment_group.id ? :primary : :link}" %>
        <% end %>
      <% end %>
    </div>
    <div id="user-ids-nav" class="col-md-6">
      <% @assignment_group.user_ids.each do |uid| %>
        <% !uid.empty? ? usr = User.find(uid.to_i) : next %>
        <%= link_to usr.username, assignment_assignment_group_path(@assignment_group, user_id: usr.id),
            class: "btn btn-#{usr.id.to_s == params[:user_id] ? :primary : :link}"%>
      <% end %>
    </div>
  </div>
  <hr/>
</div>
