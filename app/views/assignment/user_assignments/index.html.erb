<%- model_class = Assignment::UserAssignment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped page-content">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:survey_assignment_id) %></th>
      <th><%= model_class.human_attribute_name(:lime_token_tid) %></th>
      <th><%= model_class.human_attribute_name(:started_at) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @user_assignments.each do |user_assignment| %>
      <tr>
        <td><%= link_to user_assignment.id, assignment_user_assignment_path(user_assignment) %></td>
        <td><%= user_assignment.user_id %></td>
        <td><%= user_assignment.survey_assignment_id %></td>
        <td><%= user_assignment.lime_token_tid %></td>
        <td><%= user_assignment.started_at %></td>
        <td><%=l user_assignment.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_assignment_user_assignment_path(user_assignment), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      assignment_user_assignment_path(user_assignment),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_assignment_user_assignment_path,
            :class => 'btn btn-primary' %>
