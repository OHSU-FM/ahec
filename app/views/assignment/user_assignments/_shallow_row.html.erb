<% ur = ua.user_responses.first %>
<ul class="list-group">
  <li class="list-group-item">
  <div class="row">
    <div class="col-md-6">
      <%= link_to ur.title, assignment_user_response_path(ur) %>
    </div>
    <div class="col-md-4">
      <span class="label label-<%= hf_status_label_color ur %>"><%= ur.status %></span>
    </div>
    <% if ur.has_comments? %>
      <div class="col-md-2">
        <%= link_to assignment_user_response_comments_path(ur), data: { toggle: :modal } do %>
          <i class='fa fa fa-comments-o'></i>
        <% end %>
      </div>
    <% end %>
  </div>
  </li>
</ul>
