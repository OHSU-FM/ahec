<%- model_class =Assignment::AssignmentGroupTemplate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:sids) %></th>
      <th><%= model_class.human_attribute_name(:desc_md) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @assignment_group_templates.each do |assignment_group_template| %>
      <tr>
        <td><%= link_to assignment_group_template.title, assignment_assignment_group_template_path(assignment_group_template) %></td>
        <td><%= assignment_group_template.title %></td>
        <td><%= assignment_group_template.sids.count %></td>
        <td><%= assignment_group_template.desc_md %></td>
        <td><%=l assignment_group_template.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_assignment_assignment_group_template_path(assignment_group_template), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      assignment_assignment_group_template_path(assignment_group_template),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_assignment_assignment_group_template_path,
            :class => 'btn btn-primary' %>
