<%- model_class = AssignmentGroupTemplate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @assignment_group_template.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sids) %>:</strong></dt>
  <dd><%= @assignment_group_template.sids %></dd>
  <dt><strong><%= model_class.human_attribute_name(:desc_md) %>:</strong></dt>
  <dd><%= @assignment_group_template.desc_md %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              assignment_assignment_group_templates_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_assignment_assignment_group_template_path(@assignment_group_template), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              assignment_assignment_group_template_path(@assignment_group_template),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
