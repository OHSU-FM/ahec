<%= simple_form_for @survey_assignment, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :as_inline %>
  <%= error_span(@survey_assignment[:as_inline]) %>
  <%= f.input :title %>
  <%= error_span(@survey_assignment[:title]) %>
  <%= f.input :lime_survey_sid %>
  <%= error_span(@survey_assignment[:lime_survey_sid]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                assignment_survey_assignments_path, :class => 'btn btn-default' %>
<% end %>
