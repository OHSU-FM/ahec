<%- model_class = SurveyAssignment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:as_inline) %>:</strong></dt>
  <dd><%= @survey_assignment.as_inline %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @survey_assignment.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lime_survey_sid) %>:</strong></dt>
  <dd><%= @survey_assignment.lime_survey_sid %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              assignment_survey_assignments_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_assignment_survey_assignment_path(@survey_assignment), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              assignment_survey_assignment_path(@survey_assignment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
