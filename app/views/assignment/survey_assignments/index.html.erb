<%- model_class =Assignment::SurveyAssignment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Users</th>
      <th>Comments</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @survey_assignments.each do |survey_assignment| %>
      <tr>
        <td><%= link_to survey_assignment.title, edit_assignment_survey_assignment_path(survey_assignment) %></td>
        <td><%= survey_assignment.status %></td>
        <td>
          <% link_to 'Comments', assignment_survey_assignment_comments(survey_assignment_id: survey_assignment.id) %>
        </td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_assignment_survey_assignment_path(survey_assignment), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      assignment_survey_assignment_path(survey_assignment),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_assignment_survey_assignment_path(assignment_group_id: 1),
            data: {toggle: :modal},
            :class => 'btn btn-primary' %>
