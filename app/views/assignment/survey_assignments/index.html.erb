<%- model_class =Assignment::SurveyAssignment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:as_inline) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:lime_survey_sid) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @survey_assignments.each do |survey_assignment| %>
      <tr>
        <td><%= link_to survey_assignment.id, assignment_survey_assignment_path(survey_assignment) %></td>
        <td><%= survey_assignment.as_inline %></td>
        <td><%= survey_assignment.title %></td>
        <td><%= survey_assignment.lime_survey_sid %></td>
        <td><%=l survey_assignment.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_assignment_survey_assignment_path(survey_assignment), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      assignment_survey_assignment_path(survey_assignment),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_assignment_survey_assignment_path,
            :class => 'btn btn-primary' %>
