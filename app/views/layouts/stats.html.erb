<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : Settings.site.name %></title>
    <%= favicon_link_tag 'favicon.ico' %>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Edna" %>"> 
    <%= stylesheet_link_tag "application", controller_name %>
    <%= javascript_include_tag "application", controller_name %>
    <%= content_for?(:head) ? yield(:head) : '' %>
    <%= csrf_meta_tags %>
    <script type="text/javascript">
        var BASE_URL = "<%= root_url %>";
    </script>
</head>

<body id="<%= controller_name.underscore %>">

    <%= render 'layouts/nav_header' %>

    <!-- Page Content -->

    <div>

        <div>

            <div class="col-lg-12">
                <%= yield %>
            </div>

        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->

    <div class="container">

        <hr>

        <footer>
            <div class="row">
                <div class="col-lg-12">
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->

</body>

</html>

