<div class="detail-header">
  <h3 class="title-inline"><%= meeting.subject %></h3>
  <% if current_user.admin_or_higher? %>
    <p><%= link_to "Delete", coaching_meeting_path(meeting), method: :delete, remote: true, class: "btn btn-default" %></p>
  <% end %>
  <button type="button" class="close" aria-label="Close" id="hide-detail">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<div class="detail-section">
  <h4>Meeting Details</h4>
  <div><i>Status: </i><%= select_tag "m_status", options_for_select(["Scheduled", "Completed", "No Show", "Rescheduled"], meeting.m_status), class: "status-picker", data: { meetingId: meeting.id } %></div>
  <div><i>Contact Type: </i><%= meeting.location %></div>
  <div><i>Date: </i><%= meeting.date.strftime("%m/%d") %></div>
</div>

<div class="detail-section">
  <h4>Meeting Summary</h4>
  <div><%= meeting.notes %></div>
</div>

<div class="detail-section">
  <h4>Meeting Documentation</h4>
  <div class="meeting-comments">
         <h1 id="room-identifier-meeting" data-room-number=<%= "#{meeting.room.id}" %>></h1>

            <div class="row">
              <div id="room-id-<%= "#{meeting.room.id}" %>">
                  <% meeting.room.messages.each do |message| %>
                    <%= render partial: "/messages/message", locals: {message: message} %>
                <% end %>

              </div>
            </div>

            <hr>

            <div class="row">
              <form style="width: 100%">
                  <input type="text" id="meeting_comment_room" data-behavior="room_speaker_meeting"
                    style="width: 100%" placeholder="Meeting Comment - type in here">
              </form>
            </div>

  </div>
</div>
