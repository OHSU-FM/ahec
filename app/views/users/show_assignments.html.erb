<h2> <%= Settings.site.titles.user_assignment.pluralize %></h2>

<div class="row">
    <div class="col-lg-9 col-md-12 main fade-in two">
    <% if @active_assignments.empty? %>
        <h4>No active assignments</h4>
    <% else %>
        <% @active_assignments.groups.each do |group, parts| %>
          <% accordion_id = "accordion-ua-#{ parts.map{|v|v.assig.id}.join('-') }" %>
          <h3 class="text-info"><%= group %></h3>
          <div class="panel-group panel-ua-group" id="<%= accordion_id %>" role="tablist" aria-multiselectable="true">
          <% parts.each do |part| %>
          <div class="panel panel-default ua-accordion">
            <div class="panel-heading" role="tab" id="heading_ua_<%= part.assig.id%>">
                <%= hf_ua_button(part, accordion_id) %>
                <%= hf_ua_link(part, accordion_id, name: part.name) %>
                <%= content_tag :span, part.status, class: "label label-#{part.status_class} pull-right" %>
            </div>
            <div id="collapse_ua_<%= part.assig.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading_ua_<%= part.assig.id %>">
              <div class="panel-body">
              </div>
            </div>
          </div>
          <% end %>
        </div>
        <% end %>
    <% end %>
    </div>
    <div class="col-lg-3 sidebar fade-in one hidden-md hidden-sm hidden-xs">
        <div class="bs-callout bs-callout-primary" id="assignments-overview">
            <% if @completed_assignments.empty? %>
                <h3>No Completed <%= Settings.site.titles.user_assignment.pluralize %></h3>
            <% else %>
                <h3>Completed <%= Settings.site.titles.user_assignment.pluralize %></h3>
                <ul class="list-unstyled">
                    <% @completed_assignments.groups.each do |group, parts| %>
                        <li><%= content_tag :h4, group %></li>
                        <% parts.each do |part| %>
                            <li>
                                <%= part.name %>
                            </li>
                        <% end %>
                    <% end %>
                </ul>
            <% end %>
        </div>
    </div>
</div>

