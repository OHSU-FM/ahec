<div class="container" >
  <table class="table no-border" >
    <tr>
      <th class="col-sm-1"><%= f.label(:title) %></th>
      <td><%= f.text_field(:title) %></td>
    </tr>
    <tr>
      <th><%= f.label(:description) %></th>
      <td><%= f.text_area(:description, size: '40x5') %></td>
    </tr>

    <tr>
      <th><%= f.label(:tag) %></th>
      <td><%= f.select :tag,
        options_for_select(Goal::ALLOWABLE_GOAL_TAGS, @goal.tag), include_blank: true %> </td>
    </tr>

    <tr>
      <th><%= f.label(:status) %></th>
      <td><%= f.select :status,
        options_for_select(Goal::ALLOWABLE_GOAL_STATUSES, @goal.status), include_blank: true %> </td>
    </tr>
    <tr>
      <th><%= f.label(:target_date) %></th>
      <td><%= f.text_field(:target_date) %></td>
    </tr>

    <tr>
      <th><%= f.label(:location) %></th>
      <td><%= f.text_field(:location) %></td>
    </tr>

    <%= f.hidden_field :type, value: 'Goal' %>

    <div id="action_plan_items" class="nested-fields">
      <%= f.fields_for :action_plan_items do |a| %>
        <%= render 'action_plan_item_fields', f: a %>
      <% end %>
    </div>
    <div class="links">
      <tr><%= link_to_add_association "+ New Action", f, :action_plan_items %></tr>
    </div>
  </table>
</div>
